<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    @* Main Css *@
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/main.min.css" />
    <link rel="stylesheet" href="~/Content/slick.css" />
    <link rel="stylesheet" href="~/Content/slick-theme.css" />
    <link rel="stylesheet" href="~/Content/bootstrap-select.css" />

    <style>
        .hideCont, .hideContText {
            display: none;
        }
        .shape-bottom-content {
            display: block;
            bottom: 0;
            width: 100%;
            height: 450px;
            position: fixed;
            z-index: -1;
        }
    </style>
</head>
<body>
    <div class="hide-content">
        @RenderBody()
    </div>
    <div class="show-message">
        Best Resolution Above Width 600 pixel
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/slick.js" type="text/javascript"></script>
    <script src="~/Scripts/timer.js" type="text/javascript"></script>
    <script src="~/Scripts/app.js" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap-select.js" type="text/javascript"></script>

    <script type="text/javascript">
        //Stopwatch & Manual Submission
        $(document).ready(function () {
            $('.choose-manual').hide();
            $("#act-ct").prop('readonly', true);

            $('.choose-manual-btn').click(function () {
                $('.choose-manual').show();
                $('.choose-stopwatch').hide();
                $("#act-ct").prop('readonly', false);
            });

            $('.choose-stopwatch-btn').click(function () {
                $('.choose-manual').hide();
                $('.choose-stopwatch').show();
                $("#act-ct").prop("readonly", true);
            });
        });
    </script>

</body>
</html>
