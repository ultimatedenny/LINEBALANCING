@{
    /**/

    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewBag.Title = "Login Page";
}

<style>
    html, body {
        height: 100%;
    }

    body {
        background: url(../Images/bg-blur.jpg);
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center center;
    }

    @@media only screen and (max-width: 991px) {
        body {
            background: #ffffff;
        }
    }
</style>

<div class="c-login__box">
    <div class=" hidden-sm hidden-xs">
        <img src="~/Images/shimano-white-logo.png" class="img-responsive c-login__shimano-logo" />
    </div>
    <div class="c-login__box-login">
        <div class="c-login__title-greeting">
            Have a Nice Day
        </div>
        <div class="c-login__subtitle-greeting">
            Please login to continue
        </div>

        <div class="c-login__box-form">
            <div class="form-group">
                @Html.TextBox("Username", null, new { @class = "c-login__username form-control input-hide", @placeholder = "Username" })
                @*<input type="text" class="c-login__username form-control" placeholder="Username"/>*@
            </div>

            <div class="form-group margin-t-40 sm-margin-t-30">
                @Html.Password("Password", null, new { @class = "c-login__password form-control input-hide", @placeholder = "Password" })
            </div>

            <label class="c-login__container-checkbox margin-t-30 sm-margin-t-20">
                Remember me
                @Html.CheckBox("isNewlyEnrolled")
                <span class="c-login__checkmark"></span>
            </label>

            <input type="submit" class="c-login__btn-login" name="btnLogin" value="Sign in!" onclick="window.location='@Url.Action("MainMenu", "FrontEnd")'" />

            <div class="text-center margin-t-20">
                @Html.ActionLink("Forgot Password ?", null, null, new { @class = "c-login__label-forgot-password" })
            </div>
        </div>
    </div>

</div>

<div class="c-login__img-curved-logo">
    <img src="~/Images/bottom-shape-logo.png" />
</div>

