@model LineBalancing.ViewModels.VMSummaryData

@{
    if (Model == null)
    {
        <script type="text/javascript">
            window.location.href = "@Url.Action("Login", "Account")";
        </script>

        return;
    }
}

@if (!Request.IsAuthenticated || Session["Login"] == null)
{
    <script type="text/javascript">
        window.location.href = "@Url.Action("Login","Account")";
    </script>

    return;
}

@foreach (var item in Model.DTOLineBalancingReports)
{
    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 margin-b-30 md-margin-b-20 sm-margin-20">
        <div class="l-box__item-model-detail">
            <div class="row">
                <div class="col-lg-7 col-md-6 col-sm-7 col-xs-7">
                    <div class="height-50">
                        <div class="h-text--key-name-model-detail elipsis-text-inline">
                            @Html.DisplayFor(modelItem => item.Process)
                            <!-- @Html.DisplayFor(modelItem => item.CheckID) -->
                            <span class="display-block elipsis-text-inline">
                                Check Date : @Html.DisplayFor(modelItem => item.CheckingPeriode)
                            </span>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 col-md-4 col-sm-3 col-xs-3">
                    @if (!string.IsNullOrEmpty(item.EditTimes))
                    {
                        <div class="height-50">
                            <div class="label label-danger font-size-12 fweight-500 text-capitalize padding-7 elipsis-text-inline position-center-element">
                                <span class="display-block">@Html.DisplayFor(modelItem => item.EditTimes)</span>
                            </div>
                        </div>
                    }
                </div>

                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
                    <div class="height-50">
                        <a data-toggle="collapse" href="#@Html.DisplayFor(modelItem => item.ProcessIdView)" aria-expanded="true" aria-controls="collapse1" class="btn-trigger collapsed"></a>
                    </div>
                </div>
            </div>

            @* Collapse Item *@
            <div class="row">
                <div id="@Html.DisplayFor(modelItem => item.ProcessIdView)" class="collapse" role="tabpanel" aria-labelledby="headingOne">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="l-box__item-collapse-model-detail-process">

                            <div class="row">
                                <div class="col-md-9 col-sm-9 col-xs-9">
                                    <div class="h-text--period-process">
                                        <span>@Html.DisplayFor(modelItem => item.Periode)</span>&nbsp;-&nbsp;<span>@Html.DisplayFor(modelItem => item.Process)</span>
                                    </div>
                                </div>

                                @{
                                    if (!string.IsNullOrEmpty(item.Remark))
                                    {
                                        <div class="col-md-3 col-sm-3 col-xs-3 text-right">
                                            <div class="h-text--box-status-detail-process">
                                                @Html.DisplayFor(modelItem => item.Remark)
                                            </div>
                                        </div>
                                    }
                                }

                            </div>

                            <hr class="solid-line-bottom-collapse" />
                            <div class="row">
                                <div class="col-md-6 col-sm-6 col-xs-6">
                                    <table class="table table-condensed table-borderless margin-t-15 margin-b-0">
                                        <tr>
                                            <td width="60%" class="h-text__std-16-grey-b"><i class="fas fa-check-circle fa-fw color-base-navy"></i> Period</td>
                                            <td class="h-text__std-16-navy-b">:  @Html.DisplayFor(modelItem => item.Periode)</td>
                                        </tr>

                                        <tr>
                                            <td width="60%" class="h-text__std-16-grey-b"><i class="fas fa-check-circle fa-fw color-base-navy"></i> Dept</td>
                                            <td class="h-text__std-16-navy-b">:  @Html.DisplayFor(modelItem => item.Department)</td>
                                        </tr>

                                        <tr>
                                            <td width="60%" class="h-text__std-16-grey-b"><i class="fas fa-check-circle fa-fw color-base-navy"></i> Total MP</td>
                                            <td class="h-text__std-16-navy-b">:  @Html.DisplayFor(modelItem => item.TotalManPower)</td>
                                        </tr>

                                        <tr>
                                            <td width="60%" class="h-text__std-16-grey-b"><i class="fas fa-check-circle fa-fw color-base-navy"></i> Std C/T</td>
                                            <td class="h-text__std-16-navy-b">:  @Html.DisplayFor(modelItem => item.StandardCT)</td>
                                        </tr>
                                    </table>
                                </div>

                                <div class="col-md-6 col-sm-6 col-xs-6">
                                    <table class="table table-condensed table-borderless margin-t-15 margin-b-0">
                                        <tr>
                                            <td width="60%" class="h-text__std-16-grey-b"><i class="fas fa-check-circle fa-fw color-base-navy"></i> Plant</td>
                                            <td class="h-text__std-16-navy-b">:  @Html.DisplayFor(modelItem => item.Plant)</td>
                                        </tr>

                                        <tr>
                                            <td width="60%" class="h-text__std-16-grey-b"><i class="fas fa-check-circle fa-fw color-base-navy"></i> Line</td>
                                            <td class="h-text__std-16-navy-b">:  @Html.DisplayFor(modelItem => item.Line)</td>
                                        </tr>

                                        <tr>
                                            <td width="60%" class="h-text__std-16-grey-b"><i class="fas fa-check-circle fa-fw color-base-navy"></i> Qty Check</td>
                                            <td class="h-text__std-16-navy-b">:  @Html.DisplayFor(modelItem => item.QuantityCheck)</td>
                                        </tr>

                                        <tr>
                                            <td width="60%" class="h-text__std-16-grey-b"><i class="fas fa-check-circle fa-fw color-base-navy"></i> Actual C/T</td>
                                            <td class="h-text__std-16-navy-b">:  @Html.DisplayFor(modelItem => item.TotalCT)</td>
                                        </tr>
                                    </table>
                                </div>
                            </div>

                            <!--Man POwer Name-->
                            <div class="row margin-t-10">
                                <div class="col-md-12 col-sm-12 col-xs-12">
                                    <div class="height-manpower-box">
                                        <hr class="dotted-line-bottom-collapse" />
                                        <div class="h-text__std-16-grey-b text-center">Manpower Name</div>
                                        <div class="h-text__std-16-navy-b text-center margin-t-5 overflow-manpower-box">@Html.DisplayFor(modelItem => item.ManpowerNameAllProcess)</div>
                                    </div>
                                </div>
                            </div>

                            <hr class="dotted-line-bottom-collapse" />
                            <div class="row">
                                <div class="col-md-6 col-sm-6 col-xs-6">
                                    <div class="h-text__leader-submit-name">
                                        <span>
                                            <i class="fas fa-user-circle color-base"></i>
                                        </span>
                                        <span class="color-grey">
                                            Leader
                                        </span>
                                        <span>
                                            @Html.DisplayFor(modelItem => item.Leader)
                                        </span>
                                    </div>
                                </div>

                                <div class="col-md-6 col-sm-6 col-xs-6">
                                    <div class="h-text__leader-submit-name">
                                        <span>
                                            <i class="fas fa-list-alt color-base-green"></i>
                                        </span>
                                        <span class="color-grey">
                                            Check By
                                        </span>
                                        <span>
                                            @Html.DisplayFor(modelItem => item.Leader)
                                        </span>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}